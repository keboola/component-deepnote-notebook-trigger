{
      "title": "Deepnote Trigger configuration",
      "type": "object",
      "required": [
            "#api_token",
            "project_id",
            "notebook_id"
      ],
      "properties": {
            "#api_token": {
                  "propertyOrder": 10,
                  "title": "API Key",
                  "type": "string",
                  "description": "API key generated in Deepnote",
                  "format": "password"
            },
            "project_id": {
                  "propertyOrder": 20,
                  "title": "Project ID",
                  "type": "string",
                  "description": "ID of the project which contains the notebook"
            },
            "notebook_id": {
                  "propertyOrder": 30,
                  "title": "Notebook ID",
                  "type": "string",
                  "description": "The ID of the Notebook to be run"
            }
      }
}